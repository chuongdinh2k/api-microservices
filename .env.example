# Gateway
GATEWAY_PORT=3000

# Auth Service
AUTH_SERVICE_PORT=3001
AUTH_DB_URL=postgresql://auth:auth_secret@localhost:5433/auth_db
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# User Service
USER_SERVICE_PORT=3002
USER_DB_URL=postgresql://user:user_secret@localhost:5434/user_db

# Product Service
PRODUCT_SERVICE_PORT=3003
PRODUCT_DB_URL=postgresql://product:product_secret@localhost:5435/product_db

# Order Service
ORDER_SERVICE_PORT=3004
ORDER_DB_URL=postgresql://order:order_secret@localhost:5436/order_db

# Payment Service (consumes order.created)
PAYMENT_SERVICE_PORT=3005
PAYMENT_DB_URL=postgresql://payment:payment_secret@localhost:5437/payment_db

# Notification Service (consumes order.created, sends email)
NOTIFICATION_SERVICE_PORT=3006
NOTIFICATION_DB_URL=postgresql://notification:notification_secret@localhost:5438/notification_db

# RabbitMQ (async events)
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# Logging
LOG_LEVEL=info
